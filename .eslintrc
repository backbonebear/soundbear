{
    "extends": "airbnb",
    "installedESLint": true,
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "env": {
        "es6": true,
        "mocha": true,
        "node": true,
        "browser": true
    },
    "rules": {
        "arrow-parens": ["error", "always"],
        "comma-dangle": "off",
        "func-names": "off",
        "max-len" : "off",
        "new-cap": ["error", { "properties": false }],
        "no-console": "off",
        "strict": ["error", "safe"],
        "react/require-extension": [0, { "extensions": [".js", ".jsx"] }]
    }
}